@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/lib/favicon.png">
</head>
<body class="vh-100 vw-100 bg-light d-flex">
    <div style="max-width: 1000px; padding: 50px; border: 5px solid #32c332;" class="d-flex m-auto bg-white rounded-3">
        <div class="m-auto">
            <!-- Pills navs -->
            <!-- Pills content -->
            <div class="tab-content">
                <h3 class="text-center mb-4">Xác thực thông tin</h3>
                <p class="mb-2">Loại tài khoản:</p>
                <!-- Pills navs -->
                <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                    <li class="nav-item border" role="presentation">
                        <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="#pills-login" role="tab"
                           aria-controls="pills-login" aria-selected="true">Học sinh</a>
                    </li>
                    <li class="nav-item border" role="presentation">
                        <a class="nav-link hover-shadow" id="tab-register" data-mdb-toggle="pill" href="#pills-register" role="tab"
                           aria-controls="pills-register" aria-selected="false">Giáo viên</a>
                    </li>
                </ul>
                <!-- Pills navs -->
                <!-- Pills content -->
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                        @{
                            string? usernameStudent = null;
                            string? useremailStudent = null;
                            string? userphoneStudent = null;
                            string? usernameTeacher= null;
                            string? useremailTeacher= null;
                            string? userphoneTeacher= null;
                            if (ViewData["Type"] != null)
                            {
                                if (ViewData["Type"].ToString() == "student")
                                {
                                    usernameStudent = ViewData["Username"].ToString();
                                    useremailStudent = ViewData["Email"].ToString();
                                    userphoneStudent = ViewData["NumberPhone"].ToString();
                                }
                                else if (ViewData["Type"].ToString() == "employee")
                                {
                                    usernameTeacher= ViewData["Username"].ToString();
                                    useremailTeacher= ViewData["Email"].ToString();
                                    userphoneTeacher= ViewData["NumberPhone"].ToString();
                                }
                                
                            }
                        }
                        <form action="~/Login/ForgotPassword" method="post">
                            <input type="text" name="type" hidden value="student"/>
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td><label class="form-label" for="loginName">Tên đăng nhập</label></td>
                                        <td><input type="text" id="loginName" name="username" value="@usernameStudent" required class="form-control" /></td>
                                    </tr>
                                    <tr>
                                        <td><label class="form-label" for="email">Email của giám hộ</label></td>
                                        <td><input type="text" id="email" name="email" value="@useremailStudent" required class="form-control" /></td>
                                    </tr>
                                    <tr>
                                        <td><label class="form-label" for="numberPhone">Số điện thoại của giám hộ</label></td>
                                        <td><input type="text" id="numberPhone" name="numberphone" value="@userphoneStudent" required class="form-control" /></td>
                                    </tr>
                                </tbody>
                            </table>
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-4 w-100">Nhận mã xác nhận</button>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
                        <form action="~/Login/ForgotPassword" method="post">
                            <input type="text" name="type" hidden value="employee" />
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td><label class="form-label" for="loginName">Tên đăng nhập</label></td>
                                        <td><input type="text" id="loginName" name="username" value="@usernameTeacher" required class="form-control" /></td>
                                    </tr>
                                    <tr>
                                        <td><label class="form-label" for="email">Email</label></td>
                                        <td><input type="text" id="email" name="email" required value="@useremailTeacher" class="form-control" /></td>
                                    </tr>
                                    <tr>
                                        <td><label class="form-label" for="numberPhone">Số điện thoại</label></td>
                                        <td><input type="text" id="numberPhone" name="numberphone" value="@userphoneTeacher" required class="form-control" /></td>
                                    </tr>
                                   
                                </tbody>
                            </table>
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-4 w-100">Nhận mã xác nhận</button>
                        </form>
                    </div>
                    @{
                        string? mess = (string?)ViewData["ErrorNotFound"];
                        if (mess != null)
                        {
                            <span class="field-validation-error text-danger" role="alert">@ViewBag.ErrorNotFound</span>
                        }
                     }
                        <a style="text-align: right;" class="w-100 d-inline-block " href="/Login/Login">Login</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Pills content -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Assets/MDBoostrap/js/mdb.min.js"></script>
</body>
</html>
